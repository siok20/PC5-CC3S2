global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  - rules.yml

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']  # Direcci√≥n del contenedor de la app Node.js
  
  - job_name: 'node_exporter'
    static_configs:
      - targets: ['localhost:9100']

  - job_name: 'flask_app'
    static_configs:
      - targets: ['localhost:5000', 'localhost:5001', 'localhost:5002', 'localhost:5003']